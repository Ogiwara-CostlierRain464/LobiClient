<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ActionBar -->
        <item name="colorPrimary">@color/orange_light</item>
        <!-- ステータスバー -->
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <!-- RadioButtonとか -->
        <item name="colorAccent">@color/orange_light</item>
        <!-- ActionBarの文字 -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="ToolTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange_light</item>
        <item name="tabSelectedTextColor">@color/orange_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Splash -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/orange_light</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange_light</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange_dark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/orange_dark</item>
    </style>
</resources>
