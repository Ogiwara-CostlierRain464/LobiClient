<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <jp.ogiwara.test.lobitest.other.view.RoundedImageView
        android:id="@+id/group_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Group-Title"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/group_image"
        app:layout_constraintTop_toTopOf="@+id/group_image" />

    <TextView
        android:id="@+id/group_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="people"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:maxLines="2"
        android:text="last-time"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/group_people"
        app:layout_constraintLeft_toRightOf="@+id/group_people"
        app:layout_constraintTop_toTopOf="@+id/group_people" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/person"
        app:layout_constraintLeft_toRightOf="@+id/group_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_image"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>