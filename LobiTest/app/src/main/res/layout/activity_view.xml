<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <jp.ogiwara.test.lobitest.other.view.RoundedImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/image_user_icon" />

        <TextView
            android:id="@+id/text_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activityText"
            app:layout_constraintLeft_toRightOf="@+id/image_user_icon"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/image_user_icon"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_user_icon"
            android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>